---
import { Icon } from "astro-icon";
import Starfield from "~/components/starfield.astro";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
  </div>
  <div class="relative grid h-full place-items-center">
    <!-- <div class="relative grid h-full place-items-center sm:grid-cols-2"> -->
    <h2
      class="flex flex-col gap-2 self-center sm:gap-4 sm:self-auto sm:justify-self-center"
    >
      <Icon name="wordmark" class="h-24 text-white md:h-32" />
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-7xl"
      >
        Your Technical Creative
        <br /> Partners
      </div>
    </h2>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>
