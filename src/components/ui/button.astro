---
interface Props {
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted";
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-6 py-4",
};

const styles = {
  outline: "border-default bg-offset flex flex-col items-center gap-4 border",
  primary:
    "bg-primary hover:bg-secondary text-white hover:bg-slate-900  ",
};
---

<button
  {...rest}
  class:list={[
    "rounded text-center text-lrg font-bold transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</button>

