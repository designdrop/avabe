---
import { Picture } from "@astrojs/image/components";
import type { TeamMember } from "~/types";
import { Icon } from "astro-icon";

export interface Props {
  person: TeamMember;
}

const { person } = Astro.props;

const widths = [450, 800];
const sizes = "(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw";
---

<div class="flex flex-col items-center">
<a class="group aspect-square hover:!text-default" href={person.url}>
  <figure class="relative h-full w-full overflow-hidden">
    <Picture
      class="object-cover rounded-full w-full h-full transition-all duration-300 bg-cover group-hover:opacity-20 group-focus:scale-110 group-focus:opacity-20"
      src={person.image}
      widths={widths}
      sizes={sizes}
      alt={`A screenshot of ${person.url}`}
    />
    <figcaption class="absolute inset-0">
      <div
        class="flex h-full flex-col items-center justify-center gap-2 opacity-0 transition-all duration-300 group-hover:opacity-100 group-focus:opacity-100"
      >

        <p class="px-4 py-2">{person.url}</p>
      </div>
    </figcaption>
  </figure>
</a>

<h3 class="text-center font-bold uppercase text-lg pt-2">
  {person.name}
</h3>
<h4>
  {person.title}
</h4>
<a class="h-10 w-10 p-2" href={person.url}>
  <Icon name={person.icon}/>
</a>

</div>